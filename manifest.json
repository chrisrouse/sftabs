{
  "manifest_version": 3,
  "name": "SF Tabs",
  "version": "1.1.0",
  "description": "Add custom tabs to the Salesforce setup menu.",
  "author": "Chris Rouse",
  "homepage_url": "https://github.com/chrisrouse/sftabs", 
  "browser_specific_settings": {
    "gecko": {
      "id": "sftabs@github.chrisrouse",
      "strict_min_version": "116.0"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.lightning.force.com/*",
    "*://*.salesforce-setup.com/*",
    "*://*.my.salesforce-setup.com/*",
    "*://*.salesforce.com/*",
    "*://*.my.salesforce.com/*"
  ],
  "action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "SF Tabs",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.force.com/*", "*://*.salesforce.com/*"],
      "js": ["utils.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["utils.js"],
      "matches": ["*://*.force.com/*", "*://*.salesforce.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}